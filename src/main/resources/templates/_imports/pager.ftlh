[#ftl]

[#macro pagerBox postList]
    <div class="pager">
        [@pager.pagerLink page=postList.number - 1 linkCanContinue=postList.hasPrevious() text=" ðŸ¢€ " /]
        [@pager.pagerLink page=postList.number + 1 linkCanContinue=postList.hasNext() text=" ðŸ¢‚ " /]
    </div>
[/#macro]

[#macro pagerLink page text linkCanContinue]
    [#if linkCanContinue]
        <a href="${createURL({"size": postList.size, "page": page})}" class="page">${text}</a>
    [#else ]
        <span class="page cannotContinue">${text}</span>
    [/#if]
[/#macro]